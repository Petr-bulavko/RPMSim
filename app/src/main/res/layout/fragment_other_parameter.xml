<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Время выдержки БД, мс"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/holdingTime"
        app:layout_constraintEnd_toStartOf="@+id/holdingTime"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Скорость перемещения источника, м/с"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/travelSpeedSource"
        app:layout_constraintEnd_toStartOf="@+id/travelSpeedSource"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Длина пути источника (дин. обнаружение), м"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/sourcePathLength"
        app:layout_constraintEnd_toStartOf="@+id/sourcePathLength"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Количество перемещений"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/numberOfMovements"
        app:layout_constraintEnd_toStartOf="@+id/numberOfMovements"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Прерывать перемещение при первом срабатывании"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/interrupt"
        app:layout_constraintEnd_toStartOf="@+id/interrupt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Количество порогов"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/numberOfThresholds"
        app:layout_constraintEnd_toStartOf="@+id/numberOfThresholds"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Количество вр. инт. в рабочем массиве"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/workingArray"
        app:layout_constraintEnd_toStartOf="@+id/workingArray"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Количество вр. инт. фона"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundArray"
        app:layout_constraintEnd_toStartOf="@+id/backgroundArray"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Количество неиспользуемых первых порогов"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/unusedThresholds"
        app:layout_constraintEnd_toStartOf="@+id/unusedThresholds"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Период ложных тревог, с"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/falseAlarmPeriod"
        app:layout_constraintEnd_toStartOf="@+id/falseAlarmPeriod"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Вероятность обнаружения, %"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/detectionProbability"
        app:layout_constraintEnd_toStartOf="@+id/detectionProbability"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/holdingTime"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/travelSpeedSource"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/holdingTime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/holdingTime"
        app:layout_constraintTop_toBottomOf="@+id/holdingTime" />

    <EditText
        android:id="@+id/sourcePathLength"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/travelSpeedSource"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/travelSpeedSource"
        app:layout_constraintTop_toBottomOf="@+id/travelSpeedSource" />

    <EditText
        android:id="@+id/numberOfMovements"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/sourcePathLength"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sourcePathLength"
        app:layout_constraintTop_toBottomOf="@+id/sourcePathLength" />

    <EditText
        android:id="@+id/numberOfThresholds"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/interrupt"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/interrupt" />

    <EditText
        android:id="@+id/workingArray"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/numberOfThresholds"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/numberOfThresholds"
        app:layout_constraintTop_toBottomOf="@+id/numberOfThresholds" />

    <EditText
        android:id="@+id/backgroundArray"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/workingArray"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/workingArray"
        app:layout_constraintTop_toBottomOf="@+id/workingArray" />

    <EditText
        android:id="@+id/unusedThresholds"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/backgroundArray"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/backgroundArray"
        app:layout_constraintTop_toBottomOf="@+id/backgroundArray" />

    <EditText
        android:id="@+id/falseAlarmPeriod"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/unusedThresholds"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/unusedThresholds"
        app:layout_constraintTop_toBottomOf="@+id/unusedThresholds" />

    <EditText
        android:id="@+id/detectionProbability"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/falseAlarmPeriod"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/falseAlarmPeriod"
        app:layout_constraintTop_toBottomOf="@+id/falseAlarmPeriod" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Режим фона"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundMode"
        app:layout_constraintEnd_toStartOf="@+id/backgroundMode"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:gravity="center|left"
        android:text="Частота ложных тревог 1 на, проезды"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/falseAlarmRate"
        app:layout_constraintEnd_toStartOf="@+id/falseAlarmRate"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/falseAlarmRate"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/backgroundMode"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/backgroundMode" />

    <Spinner
        android:id="@+id/backgroundMode"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:entries="@array/background_mode"
        app:layout_constraintEnd_toEndOf="@+id/detectionProbability"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/detectionProbability" />

    <CheckBox
        android:id="@+id/interrupt"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@+id/numberOfMovements"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/numberOfMovements" />

    <Button
        android:id="@+id/button_update_false_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обновить"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

</androidx.constraintlayout.widget.ConstraintLayout>